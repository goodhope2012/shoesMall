<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">
	<preConditions>
		<dbms type="postgresql" />
	</preConditions>
	<property name="table.name" value="APP" />
	<changeSet id="create.sequence" author="qh">
		<createSequence sequenceName="SEQ_APP" startValue="10000" />
	</changeSet>
	<changeSet id="create.table" author="qh">
		<createTable tableName="${table.name}">
			<column name="ID" type="bigint">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="USER_ID" type="bigint" />
			<column name="NAME" type="VARCHAR(512)" />
			<column name="PLATFORM" type="VARCHAR(256)" />
			<column name="CATEGORY" type="VARCHAR(256)" />
			<column name="URL" type="VARCHAR(512)" />
			<column name="SHARE_KEY" type="VARCHAR(2048)" />
			<column name="DESCRIPTION" type="VARCHAR(2048)" />
			<column name="CREATED_DATE" type="DATETIME" />
		</createTable>
		<addForeignKeyConstraint constraintName="APP_USER_FK" baseTableName="${table.name}" baseColumnNames="USER_ID" referencedTableName="USERS" referencedColumnNames="ID" />
	</changeSet>
</databaseChangeLog>